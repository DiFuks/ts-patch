{
  "name": "ts-patch",
  "version": "1.1.2",
  "description": "Patch typescript to support custom transformers in tsconfig.json",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf dist coverage .nyc_output",
    "compile": "tsc",
    "build": "npm run clean && npm run compile && npm run build:patch",
    "build:patch": "rollup -c",
    "------------ ": "-------------",
    "test": "mocha",
    "test:nyc": "nyc --reporter html --reporter text mocha",
    "------------": "-------------",
    "postbuild": "node scripts/postbuild.js",
    "preversion": "npm run build && npm run test",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "version": "git add package.json",
    "postversion": "node scripts/postbuild.js"
  },
  "private": true,
  "keywords": [
    "typescript",
    "transform",
    "transformer",
    "plugin",
    "config",
    "ast"
  ],
  "author": "Ron S.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/nonara/ts-patch.git"
  },
  "bugs": {
    "url": "https://github.com/nonara/ts-patch/issues"
  },
  "homepage": "https://github.com/nonara/ts-patch#readme",
  "dependencies": {
    "chalk": "^3.0.0",
    "global-prefix": "^3.0.0",
    "minimist": "^1.2.5",
    "shelljs": "^0.8.4",
    "strip-ansi": "^6.0.0"
  },
  "bin": {
    "ts-patch": "./dist/bin/cli.js"
  },
  "peerDependencies": {
    "typescript": ">2.7.0"
  },
  "devDependencies": {
    "@phenomnomnominal/tsquery": "^4.0.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-json": "^4.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@types/chai": "^4.2.11",
    "@types/expect": "^24.3.0",
    "@types/istanbul": "^0.4.30",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^7.0.2",
    "@types/resolve": "1.14.0",
    "@types/rewire": "^2.5.28",
    "@types/shelljs": "^0.8.6",
    "@types/sinon-chai": "^3.2.3",
    "@types/test-console": "^1.1.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "resolve": "^1.15.1",
    "rewire": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.1.0",
    "rollup-plugin-dts": "^1.3.0",
    "rollup-plugin-shim": "^1.0.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "sinon": "^9.0.1",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.16",
    "test-console": "^1.1.0",
    "ts-nameof": "^4.2.2",
    "ts-node": "^8.7.0",
    "ts-transform-css-modules": "^0.3.3",
    "ts-transform-graphql-tag": "^0.2.1",
    "ts-transform-img": "^0.4.2",
    "ts-transform-react-intl": "^0.4.1",
    "ts-transformer-enumerate": "^0.5.1",
    "ts-transformer-keys": "^0.4.1",
    "typescript": "^3.8.3"
  },
  "directories": {
    "resources": "./dist/resources"
  }
}
